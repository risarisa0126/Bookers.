<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div class="error">
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to"show", book_path(@book.id)%>
<%= link_to"back", books_path(@book)%>
